<%- include('partials/header', { title: problem.title + ' - 英语题库' }) %>

<div class="card">
    <h1 class="problem-title" style="margin-bottom: 1rem;"><%= problem.title %></h1>
    
    <div class="problem-meta" style="margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 1px solid #e0e0e0;">
        <p><i class="fas fa-user"></i> 发布者: <%= problem.username %></p>
        <p><i class="fas fa-calendar"></i> 发布时间: <%= new Date(problem.created_at).toLocaleDateString() %></p>
        <p><i class="fas fa-chart-bar"></i> 答题次数: <%= problem.attempts || 0 %></p>
        <% if (problem.correct_count > 0) { %>
            <p><i class="fas fa-percentage"></i> 平均正确率: 
                <%= Math.round((problem.correct_count / (problem.attempts * questions.length)) * 100) || 0 %>%
            </p>
        <% } %>
    </div>
    
    <% if (problemContent) { %>
        <div class="markdown-content" style="margin-bottom: 2rem; padding: 1.5rem; background-color: #f8f9fa; border-radius: 8px;">
            <h3 style="color: #2c3e50; margin-bottom: 1rem;">题目内容</h3>
            <%- problemContent %>
        </div>
    <% } %>
    
    <% if (images && images.length > 0) { %>
        <div class="images-section" style="margin-bottom: 2rem;">
            <h3 style="color: #2c3e50; margin-bottom: 1rem;">题目图片</h3>
            <div class="images-grid">
                <% images.forEach(image => { %>
                    <div class="image-item">
                        <img src="<%= image.url %>" alt="<%= image.name %>">
                        <p style="font-size: 0.9rem; color: #666; margin: 0;"><%= image.name %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
    
    <div style="margin-top: 2rem; padding-top: 2rem; border-top: 2px solid #3498db;">
        <h2 style="margin-bottom: 1.5rem;">答题区</h2>
        
        <form action="/problem/<%= problem.id %>/submit" method="POST">
            <% questions.forEach((question, index) => { %>
                <div class="question-item card" style="margin-bottom: 1.5rem;">
                    <h4 class="question-text">第 <%= index + 1 %> 题: <%= question.questionText %></h4>
                    
                    <% if (question.type === 'choice' && question.options) { %>
                        <div class="options-list">
                            <% question.options.forEach(option => { %>
                                <div class="option-item">
                                    <label class="option-label">
                                        <input type="radio" 
                                               name="answers[<%= index %>]" 
                                               value="<%= option.key %>" 
                                               class="option-input" 
                                               required>
                                        <span class="option-text"><strong><%= option.key %>.</strong> <%= option.text %></span>
                                    </label>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="form-group">
                            <label class="form-label">请输入答案:</label>
                            <input type="text" 
                                   name="answers[<%= index %>]" 
                                   class="form-control" 
                                   required>
                        </div>
                    <% } %>
                    
                    <% if (question.explanation) { %>
                        <div style="margin-top: 1rem; font-size: 0.9rem; color: #666;">
                            <strong>提示:</strong> 本题有解析
                        </div>
                    <% } %>
                </div>
            <% }) %>
            
            <div class="form-group" style="text-align: center;">
                <button type="submit" class="btn btn-success" style="padding: 0.75rem 3rem; font-size: 1.1rem;">
                    <i class="fas fa-paper-plane"></i> 提交答案
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>